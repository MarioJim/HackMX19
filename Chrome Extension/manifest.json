{
    "name": "Phishing Identifier",
    "version": "0.1",
    "description": "This extension tells you if an email is phishing.",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs"
    ],
    "browser_action": {
        "default_icon": {
            "24": "images/img24.png",
            "36": "images/img36.png",
            "48": "images/img48.png"
        },
        "default_popup": "popup.html",
        "default_title": "Check to see if the mail is phishing"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "24": "images/img24.png",
        "36": "images/img36.png",
        "48": "images/img48.png"
    }
}